<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FFA000</item>
        <item name="colorPrimaryDark">#FFC107</item>
        <item name="colorAccent">#FFA000</item>
    </style>

    <!-- IQ imageView style -->
    <style name="imageViewStyle">
        <!-- Customize your ImageView Style here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/image_margin</item>
        <item name="android:background">@color/imageView_background</item>
        <item name="android:padding">@dimen/image_padding</item>
    </style>

    <!-- Question Header style -->
    <style name="QuestionHeaderStyle">
        <!-- Customize your Style here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Question Text style -->
    <style name="QuestionTextStyle">
        <!-- Customize your Style here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/questions_text_size</item>
        <item name="android:textColor">#000000</item>
    </style>

    <!-- CheckBox style -->
    <style name="checkBoxStyle">
        <!-- Customize your Style here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/questions_text_size</item>
        <item name="android:paddingLeft">@dimen/padding_left_check_box</item>
        <item name="android:paddingRight">@dimen/padding_right_check_box</item>
    </style>

    <!-- RadioGroup style -->
    <style name="radioGroupStyle">
        <!-- Customize your Style here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- RadioButton style -->
    <style name="radioButtonStyle">
        <!-- Customize your Style here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/questions_text_size</item>
        <item name="android:paddingLeft">@dimen/padding_left_radio_button</item>
        <item name="android:paddingRight">@dimen/padding_right_radio_button</item>
    </style>

    <!-- Results message style -->
    <style name="resultsMessageStyle">
        <!-- Customize your Style here. -->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/results_text_size</item>
        <item name="android:textColor">@color/results_color</item>
        <item name="android:fontFamily">casual</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/margin_between_views</item>
        <item name="android:layout_marginBottom">@dimen/margin_between_views</item>
    </style>

</resources>
